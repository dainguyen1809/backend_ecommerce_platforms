{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "yarn format:assets && yarn format:php",
    "format:check": "prettier --check . && ./vendor/bin/pint --test",
    "format:assets": "prettier --write '**/*.{blade.php,yml,yaml,json}' '.env*'",
    "format:php": "./vendor/bin/pint",
    "pint": "./vendor/bin/pint",
    "pint:test": "./vendor/bin/pint --test"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "axios": "^1.11.0",
    "concurrently": "^9.0.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@prettier/plugin-php": "^0.24.0"
  }
}
